						android:src="@drawable/ic_launcher"
						 />
        
                    <TextView android:textColor="#000000" android:text="فیلد"
                      
                         android:layout_weight="8"
                         android:layout_height="fill_parent"
		                android:layout_width="0dp"
                          android:textStyle="bold"
                           android:gravity="right"
                          />
        


                </TableRow>
 <TableRow 
                    android:layout_width="fill_parent" android:layout_height="0dp"
                    android:layout_weight="10"
                    android:padding="3dip"
                   >
                    <TextView android:textColor="#000000" android:text="غلام "
                         android:layout_weight="30"
                         android:layout_height="fill_parent"
		                android:layout_width="0dp"
                          android:textStyle="bold"
                          android:gravity="right"/>
                    <TextView android:textColor="#000000" android:text="غلام "
                         android:layout_weight="30"
                         android:layout_height="fill_parent"
		                android:layout_width="0dp"
                          android:textStyle="bold"
                          android:gravity="right"/>
                    <TextView android:textColor="#000000" android:text="اسم"
                         android:layout_weight="8"
                         android:layout_height="fill_parent"
		                android:layout_width="0dp"
                          android:textStyle="bold"
                          android:gravity="right"/>
        


                </TableRow>
            
<TableRow 
                   android:layout_width="fill_parent" android:layout_height="0dp"
                    android:layout_weight="10"
                    android:padding="3dip"
                   >
                    <TextView android:textColor="#000000" android:text="غلامی "
                         android:layout_weight="30"
                         android:layout_height="fill_parent"
		                android:layout_width="0dp"
                          android:textStyle="bold"
                          android:gravity="right"/>
